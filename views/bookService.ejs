                    </div>
                </div>
            </div>
            <!-- Option 3  -->
            <div class="row pt-4">
                <div class="col-sm-4  d-flex justify-content-center ">
                    <div class="e-services">
                        <div class="btn btn-light ">
                            <div class="form-check">
                            <input class="form-check-input  e" type="checkbox" value="" name="electrician">
                            <label class="form-check-label" for="">Switches, meters and Fuses</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4  d-flex justify-content-center ">
                    <div class="p-services">
                        <div class="btn btn-light ">
                            <div class="form-check">
                            <input class="form-check-input p" type="checkbox" value="" name="plumber">
                            <label class="form-check-label" for="">Blocks and Leakages</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4  d-flex justify-content-center ">
                    <div class="c-services">
                        <div class="btn btn-light ">
                            <div class="form-check">
                              <input class="form-check-input c" type="checkbox" value="" name="carpenter">
                              <label class="form-check-label" for="">Door and Window Repair</label>
