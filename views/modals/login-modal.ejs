<!-- Login Modal  -->
  <!-------------Login-Modal--------------->
  <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="loginModalLabel">Login</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        
        <div class="modal-body">
            <!---------Radio buttons----------->
            <div class="row" id="select-user-login">
                <div class="col-sm-3">
                    <label for="select-user">Login as</label>
                </div>
                <div class='col-sm-4'>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="login" id="user-login" value="user-login">
                        <label class="form-check-label" for="inlineRadio1">User</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="login" id="employee-login" value="employee-login">
                        <label class="form-check-label" for="inlineRadio2">Employee</label>
                    </div>
                </div>
            </div>

            <!------------Form Body --------------->
            
            <!--Login for User  -->

            <form id="userLogin" method="POST" action="/user/login">
        
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-8">
                <input type="email" class="form-control" id="userLoginEmail" name="email" placeholder="abc@xyz.com">
                </div>
            </div>
        
            <div class="form-group row">
                <label for="password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-8">
                <input type="password" class="form-control" id="userLoginPassword" name="password" placeholder="password">
                </div>
            </div>
        
            <div class="form-group row">
                <div class="col-sm-4 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 offset-sm-2">
                    <a href="#">Forget Password?</a>
                </div>
                <!-- <div class="col-sm-4">
                    <a href="#"  id="register-link" >Register here</a>
                </div> -->
            </div>
            
            </form>
        
            <!-- Login for Employee -->
        
            <form id="employeeLogin" method="POST" action="/employee/login">
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-8">
                    <input type="email" class="form-control" id="employeeLoginEmail" name="email" placeholder="abc@xyz.com">
                    </div>
                </div>
            
                <div class="form-group row">
                    <label for="password" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-8">
                    <input type="password" class="form-control" id="employeeLoginPassword" name="password" placeholder="password">
                    </div>
                </div>
            
                <div class="form-group row">
                    <div class="col-sm-4 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4 offset-sm-2">
                        <a href="#">Forget Password?</a>
                    </div>
                    <!-- Registration Link -->
                    <!-- <div class="col-sm-4">
                        <a href="#" id="register-link">Register here</a>
                    </div> -->
                </div>
            </form>
        
        </div>
    
    </div>
    </div>
</div>